@{
    ViewBag.Title = "Home Page";
}

<style>
    .divSearch {
        width: 20%;
        height: 700px;
        float: left;
        padding-top: 5px;
        padding-bottom: 5px;
    }

    .divGoogleMap {
        width: 80%;
        height: 670px;
        float: left;
        padding-top: 5px;
        padding-bottom: 5px;
    }

    .googleMap
{
	border: 1px solid #ccc;
	margin: 5px 5px;
	-moz-box-shadow: 5px 5px 10px #000;
	-webkit-box-shadow: 5px 5px 10px #000;
	width: 620px;
	border-radius: 5px;
	position: absolute;
}
.googleMapLoading
{
	margin: 300px auto;
	-moz-box-shadow: 5px 5px 10px #000;
	-webkit-box-shadow: 5px 5px 10px #000;
	border-radius: 5px;
}
</style>

<div class="divSearch">
   @Html.Partial("~/Views/Home/LocationSearch.cshtml")
</div>

<div class="divGoogleMap">
    @Html.Partial("~/Views/Home/GoogleMap.cshtml")
</div>
